#include "sort.h"
void counting_sort(int *array, size_t size)
{
	int *countingArr = NULL, max;
	size_t i = 0, k;

	max = array[i];
	for (; i < size; i++)
		if (array[i] > max)
			max = array[i];

	countingArr = (int*) malloc(sizeof(int) * max);
	if (!countingArr)
		return;

	Max = max;
	for (i = 0; i < Max; i++)
		countingArr[i] = 0;
	for (i = 0; i < size; i++)
		countingArr[array[i]]++;


	for (i = 0; i < Max - 1; i++)
		countingArr[i + 1] += countingArr[i - 1];

	/**
	for (; i > 0; i--)
		countingArr[i] = countingArr[i - 1];
	countingArr[0] = [0];
	*/

	i = 0;
	for (k = 0; k < M; k++)
		while (countingArr[k] != 0)
		{
			array[i++] = k;
			countingArr[k]--;
		}
}
